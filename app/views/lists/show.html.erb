<div class="container d-flex justify-content-between">
  <h1><%= @list.name %></h1>
  <%= link_to "Edit list name", edit_list_path,class:"btn btn-primary" %>
</div>
<div class="container d-flex justify-content-between">
  <%= link_to "Back to lists", lists_path %>
  <%= link_to "Add bookmark", new_list_bookmark_path(@list) %>
</div>
<div class="container">
  <div class="row">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card h-100 mx-auto" style="width: 18rem">
        <img src="<%= bookmark.movie.poster_url%>" class="card-img-top" alt="Some Image">
          <div class="card-body">
            <h3><%= bookmark.movie.title %></h3>
            <p><%= bookmark.comment %></p>
            <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
      </div>
      <% end %>
  </div>
</div>
